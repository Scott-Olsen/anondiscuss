.dashboard-box
  %h2 Form
  %p.notice
    = notice
  %p.alert
    = alert
- if current_user.try(:is_admin?)
  / TODO: Toggle to hide and something else
  .dashboard-box#recent-invisible-posts
    - @recent_invisible_posts.each do |post|
      .post
        %p= truncate(post.content, :length => 100)
        %small= post.id
        %small= time_ago_in_words(post.updated_at)
        - if can? :update, @post
          .admin_controls
            %ul
              %li= link_to 'Edit', edit_post_path(post)
              %li= link_to 'Toggle Visibility', softdelete_post_path(:id => post.id), method: :put
              %li= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete
.dashboard-box#donate
  .box-content
    = render :partial => 'shared/wepay'
.dashboard-box#about-box
  - if user_signed_in?
    %li
      = link_to('Logout', destroy_user_session_path, :method=>'delete')
    %li
      = link_to('Edit account', edit_user_registration_path)
  - else
    %li
      = link_to('Login', new_user_session_path)
    %li
      = link_to('Sign up', new_user_registration_path)
  = link_to "About", about_path
