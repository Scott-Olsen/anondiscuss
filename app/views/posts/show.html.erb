<p id="notice"><%= notice %></p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <b>Username:</b>
  <%= @post.username %>
</p>

<h2>Comments</h2>
<div id='comments'>
<%= @post.comments.count %>
<%= @comments.count %>
<%= render @comments %>
<%= will_paginate @comments, :class => "pagination", :param_name => 'comments_page' %>
</div> 
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
