= provide(:title, 'Post #' + @post.id.to_s)
#content-main
  = render @post
  #comments
    = render @comments
  = will_paginate @comments, :class => "pagination", :param_name => 'comments_page'
#dashboard
  .dashboard-box#form-box
    %p.notice
      = notice
    %p.alert
      = alert
    = link_to 'Reply to this post', new_post_comment_path(@post.id), :remote => true
  .dashboard-box#donate
    .box-content
      = render :partial => 'shared/wepay'
  .dashboard-box#about-box
    = render :partial => 'shared/about-box'
